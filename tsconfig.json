{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "allowJs": true,
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*", "*.ts", "*.js"]
}
