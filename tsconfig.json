{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "allowJs": true,
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*", "*.ts", "*.js"]
}
