{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true
  },
  "include": [
    "vite.config.mts",
    "lib/**/*.d.ts",
    "lib/**/*.ts",
    "lib/**/*.js",
    "lib/**/*.svelte"
  ]
}
