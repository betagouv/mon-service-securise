block visite-guidee
  script(id = 'etat-visite-guidee', type = 'application/json').
    !{JSON.stringify(etatVisiteGuidee || {})}

  if etatVisiteGuidee && !etatVisiteGuidee.dejaTerminee
    if !etatVisiteGuidee.enPause
      #visite-guidee-rideau
      #visite-guidee
    #visite-guidee-menu-navigation