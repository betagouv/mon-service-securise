extends mssDeconnecte

mixin contenuAvantage(titre, description)
  .contenu-avantage
    h4!= titre
    p!= description

mixin etape(numero, titre, description, afficheChemin = true)
  - const estPair = numero % 2 === 0
  .etape(class=`${estPair ? 'pair' : ''}`)
    img.taille-maximale.tres-petite-marge-basse(src=`/statique/assets/images/home/illustration_etape_${numero}.svg` alt='')
    .numero-etape.tres-petite-marge-basse(class=`numero-${numero}`)
      span!= numero
    .contenu-texte-etape
      h4.alignement-gauche!= titre
      p.alignement-gauche!= description
    if afficheChemin
      img.visible-uniquement-desktop.chemin(class=`${estPair ? 'pair' : ''}` src='/statique/assets/images/home/chemin_etape_gauche.svg' alt='')

mixin chiffreCle(chiffre, description)
  .chiffre-cle
    h4.alignement-gauche.centre-tablette.couleur-principale-foncee!= chiffre
    p.alignement-gauche.centre-tablette!=description

mixin temoignage(citation, auteur, source)
  .temoignage.alignement-gauche
    img(src='/statique/assets/images/home/icone_temoignage.svg' alt='')
    h4!= `« ${citation} »`
    h5!= auteur
    h6.alignement-gauche!= source

mixin carteCarrousel(numero, description)
  .carte-carrousel(id=`slide-${numero}`)
    img.petite-marge-basse(src=`/statique/assets/images/home/illustration_carrousel_${numero}.svg` alt='')
    h4!= description


block append styles
  link(href='/statique/assets/styles/index.css', rel='stylesheet')
  link(href='/statique/assets/styles/index.responsive.css', rel='stylesheet')
  link(href='/statique/assets/styles/entete.responsive.css', rel='stylesheet')
  link(href='/statique/assets/styles/piedPage.responsive.css', rel='stylesheet')
  link(href='/statique/assets/styles/home.css', rel='stylesheet')
  link(href='/statique/assets/styles/home.tablette.css', rel='stylesheet')
  link(href='/statique/assets/styles/home.desktop.css', rel='stylesheet')

