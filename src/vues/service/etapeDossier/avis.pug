extends ../formulaireEtapier
include ../../fragments/elementsAjoutables/elementsAjoutablesAvis
include ../../cartes/recommandationsANSSI

block append styles
  link(href = '/statique/assets/styles/etapesDossier/avis.css', rel = 'stylesheet')
  link(href = '/statique/assets/styles/etapesDossier/avis.selectize.css', rel = 'stylesheet')
  link(href = '/styles/selectize.default.min.css', rel = 'stylesheet')

block formulaire
  section.description
    p.
      Renseignez un ou plusieurs avis sur la sécurité du service pour aider l'autorité d'homologation à prendre sa décision.
      Nous vous recommandons au moins un avis groupé.

    .mention champ obligatoire

  +elementsAjoutablesAvis(service.dossierCourant().avis.avis)

  script(type = "module", src = "/statique/homologation/etapes/avis.js")
  script(src = "/bibliotheques/selectize.min.js")

block bouton-etape
    a(class = 'nouvel-item bouton bouton-secondaire', id = 'ajout-element-un-avis') Ajouter un avis
    button.bouton#suivant(
      data-id-homologation = service.id,
      data-id-etape = idEtape,
      data-id-etape-suivante = referentiel.idEtapeSuivante(idEtape)
    ) Suivant

block cartes-informations
  +recommandationsANSSI({ referentiel, noteObtenue: service.indiceCyber().total })
